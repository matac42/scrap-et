<body>
  <header>
<h1>ScrapBox</h1>
<span><%= link_to "", new_scrap_path, class: 'plus2' %></span>


<form id="form1" action="http://localhost:3000/scraps">
<input id="sbox"  id="s" name="s" type="textarea" placeholder="キーワードを入力" />
<input id="sbtn" type="submit" value="検索" />

</form>
</header>

<%= form_with url: destroy_all_scraps_path, method: :delete do |f| %>
<ul class="itemlist">
    <% @scraps.each do |scrap| %>
      <%= button_to edit_scrap_path(scrap), {method: :get, class: 'btn-square'} do %>
      <div class="check_box"><%= check_box_tag "deletes[#{ scrap.id }]", scrap.id%></div>
      <h1><%=scrap.title%></h1>
      <br>
      <br>
      <%= scrap.content %>

      <% end %>
    <% end %>
</ul>
<br>
<%= f.submit "選択削除", data: { confirm: 'Are you sure?' } %>
<% end %>


</body>
